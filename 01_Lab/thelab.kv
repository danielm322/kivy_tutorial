# WidgetsExample:

<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Click here"
        on_press: root.on_button_click()
        # root refers to WidgetsExample, self would refer to the button
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "20dp"
        color: 1, 0.5, 1
    Switch:
        id: my_switch
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
        active: True
    Slider:
        id: my_slider
        min: 0
        max: 100
        # set default initial position:
        value: 50
        # on_value: root.on_slider_value(self)
        orientation: "vertical"
        disabled: not my_switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            # text: root.slider_value_txt
            text: str(int(my_slider.value))
            font_name: "fonts/Lcd.ttf"
            font_size: "20dp"
            color: 1, 0.5, 1
        ProgressBar:
            max: 100
            value: my_slider.value
    TextInput:
        id: my_text_input
        size_hint: None, 1
        width: "100dp"
        # default text:
        text: "foo"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: root.text_input_str

